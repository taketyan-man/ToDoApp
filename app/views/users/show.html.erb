<div class="user">
  <div class="user-header">
    <h1>ユーザー詳細画面</h1>
      <div class="user_body">
        <h2><%= @user.name %></h2>
        <p>メールアドレス：<%= @user.email %></p>
        <p>達成済タスク：<%= @todos.where(done: true).count %></p>
        <p>未達成タスク：<%= @todos.where(done: false).count %></p>
        <% if @user.public %>
          <p>公開</p>
        <% else %>
          <p>非公開</p>
        <% end %>
        <p class="userEdit"><%= link_to("編集", "/user/#{@user.id}/edit", class:"userEditList") %></p>
      </div>
    </div>
  </div>
</div>
