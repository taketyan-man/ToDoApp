<div class="todo">
  <div class="todo-header">
    <h1>ToDoリスト</h1>
    <div class="tab-list">
    <ul class="tab-con">
    <li class="tab tab-active">未完了</li>
    <li class="tab">完了</li>
    <li class="tab">応援</li>
    </ul>
    </div>
  </div> 
  <div class="todo_main">
    <div class="todo_body">
      <div class="todo-list-box todo-index-active">
        <% if @todo.blank? %>
          <%= link_to("ToDoを追加しよう", "/tasks/new", class: "list-text") %>
        <% else %>
          <h2>未完タスク</h2>
          <% @todo.each do |todo| %>
            
            <div class="todo-list <%= "todo-list-out" if todo.limit_date <= Date.today %>">
              <div class="index-text-box"> 
                <%= link_to(todo.text, "/tasks/#{todo.id}/edit", class: "todo-list-text") %>
              </div>
              <div class="index-limit">
              <a><%= todo.limit_date %></a> 
              </div>
            
              <div class="index-btn-box">
                <%= button_to '完了', done_path(todo.id),  date:{"turbo-method": :post}, class:"index-done-btn"%>
              </div>
            </div>
            
          <% end %>    
        <% end %>
      </div>
        
        <div class="todo-list-box">
        <% if @todo_done.blank?%>
            <% m = 1 %>
        <% else %>
        <h2>完了済み</h2>
          <% @todo_done.each do |todo| %>
            <div class="todo-list">
              <div class="index-text-box">
                <%= link_to(todo.text, "/tasks/#{todo.id}/edit", class: "todo-list-text") %>
              </div>
              <div class="index-limit">
              <a><%= todo.limit_date %></a>
              </div>
              <div class="index-btn-box">
                <%= button_to '未完了', done_path(todo.id),  date:{"turbo-method": :post}, class:"index-done-btn"%>
              </div>
            </div>
          <% end %>    
        <% end %>
        </div>
        
    </div>
  </div>
</div>