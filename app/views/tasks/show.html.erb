<div class="todo">
  <div class="todo-header">
    <h1>ToDo詳細</h1>
    <div class="todo_main">
      <div class="todo_body">
        <table border="1">
          <tr>
            <th>テキスト</th>
            <th>リミット日時</th>
            <th>作成日時</th>
            <% if @todo.created_at != @todo.updated_at %>
              <th>更新日時</th>
            <% end %>
          </tr>
          <tr>
            <td><%= @todo.text %></td>
            <td><%= @todo.limit_date %></td>
            <td><%= @todo.created_at.strftime('%Y/%m/%d %H:%M') %></td>
            <% if @todo.created_at != @todo.updated_at %>
              <td><%= @todo.updated_at.strftime('%Y/%m/%d %H:%M') %></td>
            <% end %>
          </tr>
        </table>
        <%= link_to("編集", "/tasks/#{@todo.id}/edit", class: "edit-btn show-btn")%>
        <%= form_tag ("/tasks/delete") do %>
          <input type="hidden" name="id" value="<%= @todo.id %>">
          <input type="submit" value="削除する" class="show-btn">
        <% end %>
      </div>
    </div>
  </div>
</div>