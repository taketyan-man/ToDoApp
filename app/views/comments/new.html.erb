<div class="comment-new-box">
  <% @comment.errors.full_messages.each do |message| %>
    <div class="form-error">
      <%= message %>
    </div>
  <% end %>

  <%= form_with(model: @todo, local: true) do |form| %>
    <div class="comment-new-form">
      <%= form.text_area :text, class: "newtext", rows: 5, cols: 33 %>
      <div class="submit-button comment-new-submit">
        <%= form.submit "コメントする" %>
      </div>
    </div>
  <% end %>
</div>